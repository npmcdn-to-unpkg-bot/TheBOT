

 <div class = "news">
  <h1>#BlackTwitter Social Justice</h1>
   <% @tweet_sj.in_groups_of(4,false).each do |group| %>
    <div class = "row">
     <% group.each do |tweet| %>
      <div class = "col-lg-3">
       <blockquote class="twitter-tweet"
        data-link-color="#55acee" lang="en">
        <p><%= tweet.content %></p>
        <a href= "<%= tweet.tweet_url %>"></a>
       </blockquote>
      </div >
     <% end %>
    </div>
   <% end %>
  </div>


  <%= will_paginate @tweet_sj, :page_links => false %>
